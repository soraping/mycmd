{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "noImplicitAny": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "atom": {
    "rewriteTsconfig": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["./typings/"],
  "files": ["./src/index.ts"]
}
